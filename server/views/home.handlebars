<h1 class="mt-3 mb-3">Welcome to CI app</h1>
<div class="container">
    <form action="/build" method="POST" role="form">
        <div class="form-group">
            <label for="commit_hash">Commit hash</label>
            <input class="form-control" id="commit_hash" type="text" name="commit_hash" required>
        </div>
        <div class="form-group">
            <label for="build_command">Build command</label>
            <input class="form-control" id="build_command" type="text" name="build_command" required>
        </div>
        <button type="submit" class="btn btn-primary">Build</button>
    </form>
</div>
