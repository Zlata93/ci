<h1 class="mb-3">Welcome to CI app</h1>
<div class="container">
    <form role="form" id="form" method="post">
        <div class="form-group">
            <label for="commit_hash">Commit hash</label>
            <input class="form-control" id="commit_hash" type="text" name="commit_hash" required>
        </div>
        <div class="form-group">
            <label for="build_command">Build command</label>
            <input class="form-control" id="build_command" type="text" name="build_command" required>
        </div>
        <button type="submit" class="btn btn-primary">Build</button>
    </form>
</div>
<div class="container mt-5">
    <table class="table" id="table">
        <thead>
        <tr>
            <th scope="col">Build</th>
            <th scope="col">Status</th>
            <th scope="col">Details</th>
        </tr>
        </thead>
        <tbody>
            {{#each builds}}
            <tr>
                <td scope="col">{{commit_hash}}</td>
                <td scope="col">{{status}}</td>
                <td scope="col"><a href="build/{{id}}">build/{{id}}</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

